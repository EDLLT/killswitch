{
	"manifest_version": 2,
	"name": "KillVPN",
	"short_name": "KillVPN",
	"description": "Prevent access to websites depending on your IP address",
	"version": "1.0",
	"version_name": "1.0 beta",
    "author": "github.com/maxisme",
	"background": {
		"scripts": ["background.js"],
		"persistent": true
	},
	"permissions": [
	   "webRequest",
	   "webRequestBlocking",
	   "<all_urls>", 
	   "storage"
	],
	"options_ui": {
		"page": "/html/options.html",
		"chrome_style": true,
		"open_in_tab": false
	},
	"browser_action": {
		"default_icon": "/img/128x128grey.png",
		"default_popup": "/html/popup.html",
		"default_title": "KillVPN"
	}
}